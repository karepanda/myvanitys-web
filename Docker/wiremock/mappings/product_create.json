  - request:
      method: POST
      urlPath: /product
      headers:
        X-Request-ID:
          matches: '^[a-fA-F0-9-]{36}$'
        X-Flow-ID:
          matches: '^[a-fA-F0-9-]{36}$'
        Accept-Language:
          equalTo: "en-US"
        User-Agent:
          contains: "MyVanitysApp"
        Authorization:
          matches: '^Bearer\s[a-zA-Z0-9-._~+/]+=*$'
    response:
      status: 201
      headers:
        Content-Type: application/json
      jsonBody:
        productId: "123e4567-e89b-12d3-a456-426614174000"
        name: "Lipstick"
        category: "Makeup"
        brand: "BrandX"
        color: "#FF5733"
        finish: "matte"
        coverage: "full"
        skinType: "normal"
        price: 19.99
  - request:
      method: POST
      urlPath: /product
      headers:
        X-Request-ID:
          absent: false
        X-Flow-ID:
          absent: false
        Accept-Language:
          absent: false
        User-Agent:
          absent: false
        Authorization:
          absent: false
    response:
      status: 400
      headers:
        Content-Type: application/json
      jsonBody:
        message: "Invalid product data provided"
  - request:
      method: POST
      urlPath: /product
    response:
      status: 500
      headers:
        Content-Type: application/json
      jsonBody:
        message: "Unexpected error occurred while creating the product"
